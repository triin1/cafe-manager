<%- include('../partials/header') %>

<table id='financials'>
    <thead>
        <tr>
            <th>SKU name</th>
            <th>Revenue</th>
            <th>Units sold</th>
            <th>Average revenue per unit</th>
            <th>Cost of materials</th>
            <th>Cost of labour</th>
            <th>Profit</th>
        </tr>
    </thead>
    <tbody>
        <% financials.forEach(function(f, index) { %>
            <tr>
                <td><%= f.SKUName %></td>
                <td>$ <%= revenue[index] %></td>
                <td><%= f.salesQuantity %></td>    
                <td>$ <%= avgRevUnit[index] %></td>
                <td>$ <%= f.materialCost %></td>
                <td>$ <%= costOfLabour[index].toFixed(2) %></td>
                <td>$ <%= profit[index].toFixed(2) %></td>
            </tr>
        <% }) %>
</table>


<%- include('../partials/footer') %>